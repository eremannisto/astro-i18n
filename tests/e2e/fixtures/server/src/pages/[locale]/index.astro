---
import { Locale } from "@mannisto/astro-i18n/runtime"

export const prerender = false

const locale = Locale.from(Astro.url)
const t = Locale.use(locale)
---

<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <title>{t("nav.home")}</title>
  </head>
  <body>
    <h1 data-testid="title">{t("nav.home")}</h1>
    <nav>
      <a href={Locale.url(locale, "/")}>{t("nav.home")}</a>
      <a href={Locale.url(locale, "/about")}>{t("nav.about")}</a>
    </nav>
  </body>
</html>
